addons:
  apt:
    packages:
      - libpulse-dev
DEPLOY_DEFAULT: &DEPLOY_DEFAULT
  key: $BINTRAY_KEY
  on:
    tags: true
  provider: bintray
  skip_cleanup: true
  user: pauldraper
dist: trusty
git:
  depth: 1
language: cpp
script:
  - '[ -z "$TRAVIS_TAG" ] || export VERSION="$TRAVIS_TAG"'
  - make -j3 all bintray
  - '[ -f names.makefile ]'
sudo: required # has ~2x more memory
